<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.loan.bgloan.seekerbar.SeekBarIndicated
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:indicator_formatString="@string/indicator_km"
        app:indicator_src="@drawable/bg_apply_loan_seek_tip"
        app:seekbar_progressDrawable="@drawable/apply_loan_progress_horizontal"
        app:seekbar_thumb="@drawable/apply_loan_progress_indicator"
        android:layout_marginBottom="30dp"
        app:indicator_textCenterHorizontal="true"
        app:indicator_textCenterVertical="true"
        app:indicator_textColor="@android:color/black" />
    <com.loan.bgloan.seekerbar.IndicatorSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isb_max="100"
        app:isb_min="-1.0"
        app:isb_progress="25"
        app:isb_seek_smoothly="true"
        app:isb_ticks_count="5"
        app:isb_show_tick_marks_type="oval"
        app:isb_tick_marks_size="13dp"
        app:isb_tick_marks_drawable="@mipmap/ic_launcher"
        app:isb_show_tick_texts="true"
        app:isb_tick_texts_size="15sp"
        app:isb_tick_texts_color="@color/black"
        app:isb_thumb_color="@color/color_green"
        app:isb_thumb_size="20dp"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_indicator_color="@color/color_gray"
        app:isb_indicator_text_color="@color/color_red"
        app:isb_indicator_text_size="18sp"
        app:isb_track_background_color="@color/color_gray"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="@color/color_blue"
        app:isb_track_progress_size="4dp"
        app:isb_only_thumb_draggable="false"/>
    <com.tools.widget.IndicatorSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isb_max="10"
        app:isb_min="4"
        android:layout_marginTop="@dimen/dp_50"
        app:isb_progress="25"
        app:isb_seek_smoothly="true"
        app:isb_tick_texts_size="15sp"
        app:isb_tick_texts_color="@color/black"
        app:isb_thumb_color="@color/white"
        app:isb_thumb_size="24dp"
        app:isb_show_indicator="rounded_rectangle"
        app:isb_indicator_color="#E9E5FC"
        app:isb_indicator_text_color="#7360F2"
        app:isb_indicator_text_size="8sp"
        app:isb_track_background_color="#F5F5F5"
        app:isb_track_background_size="8dp"
        app:isb_track_progress_color="#8A78F3"
        app:isb_track_progress_size="8dp"
        app:isb_track_rounded_corners="true"
        app:isb_only_thumb_draggable="false"/>
    <com.loan.bgloan.seekerbar.IndicatorSeekBar
        android:layout_width="match_parent"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@color/white"
        android:max="80"
        android:min="40"
        android:orientation="horizontal"
        android:progress="6"
        android:progressDrawable="@drawable/apply_loan_progress_horizontal"
        android:thumb="@drawable/apply_loan_progress_indicator"
        android:layout_height="@dimen/dp_24"/>
    <com.loan.bgloan.seekerbar.TextThumbSeekBar
        android:layout_width="match_parent"
        android:min="4"
        android:layout_marginTop="20dp"
        android:progress="13"
        android:max="20"
        android:progressDrawable="@drawable/apply_loan_progress_horizontal"

        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/textProgress"
        android:layout_width="wrap_content"
        android:background="@drawable/apply_loan_progress_indicator"
        android:text="进度"
        android:gravity="center"
        android:padding="3dp"
        android:layout_height="wrap_content"/>
    <SeekBar
        android:id="@+id/textBar"
        android:progress="13"
        android:max="20"
        style="@style/SeekBarNoRippleTheme"
        android:progressDrawable="@drawable/apply_loan_progress_horizontal"
        android:thumb="@drawable/apply_loan_progress_indicator"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <Button
        android:id="@+id/picker"
        android:layout_width="match_parent"
        android:text="pickerview"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/pickeroptions"
        android:layout_width="match_parent"
        android:text="pickeroptions"
        android:layout_height="wrap_content"/>
</LinearLayout>